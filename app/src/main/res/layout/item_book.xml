<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                xmlns:tools="http://schemas.android.com/tools"
                android:padding="@dimen/medium_spacing">
    <ImageView
        android:id="@+id/cover_iv"
        android:layout_width="144dp"
        android:layout_height="205dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/cover_iv"
        android:layout_marginLeft="@dimen/medium_spacing"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sub_big_spacing"
            tools:text="ASP.NET案例分析与教程"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/medium_spacing">
            <ImageView
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/ic_author"/>
            <TextView
                android:id="@+id/author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text"
                android:layout_marginLeft="@dimen/sub_medium_spacing"
                android:textColor="@color/sub_text_color"
                tools:text="尹毅"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/sub_medium_spacing">
            <ImageView
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/ic_publisher"/>
            <TextView
                android:id="@+id/publisher_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text"
                android:layout_marginLeft="@dimen/sub_medium_spacing"
                android:textColor="@color/sub_text_color"
                tools:text="北京：机械工业出版社"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/sub_medium_spacing">
            <ImageView
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/ic_barcode"/>
            <TextView
                android:id="@+id/barcode_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text"
                android:layout_marginLeft="@dimen/sub_medium_spacing"
                android:textColor="@color/sub_text_color"
                tools:text="123"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_scaned"
        android:visibility="gone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/sub_medium_spacing"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/done"/>
</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/div"/>

</LinearLayout>