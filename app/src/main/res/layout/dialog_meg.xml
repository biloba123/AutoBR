<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/big_spacing"
        android:paddingLeft="@dimen/big_spacing"
        android:paddingRight="@dimen/big_spacing"
        android:textSize="@dimen/big_text"
        android:textColor="@color/text_color"
        tools:text="@string/info"/>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/big_spacing"
        android:paddingRight="@dimen/big_spacing"
        android:paddingBottom="@dimen/big_spacing"
        android:paddingTop="@dimen/medium_spacing"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sub_big_text"
        tools:text="@string/scan_code"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingBottom="@dimen/big_spacing"
        android:paddingRight="@dimen/big_spacing"
        android:paddingLeft="@dimen/big_spacing">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorAccent"
            android:textSize="@dimen/sub_big_text"
            android:text="确定"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/sub_medium_spacing"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorAccent"
            android:textSize="@dimen/sub_big_text"
            android:text="取消"
            android:layout_marginLeft="@dimen/big_spacing"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/sub_medium_spacing"/>
    </LinearLayout>

</LinearLayout>